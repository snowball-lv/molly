require "rake/clean"

SRC = FileList["src/*.c", "src/*.asm"]

OBJ = SRC.map do |f|
	f.ext(".o").sub("src", "out")
end

directory "bin"
directory "out"

file "bin/kernel.bin" => "bin/kernel.exe" do
	Dir.chdir("bin") do
		sh "objcopy -O binary " \
			"-j .start " \
			"-j .text " \
			"-j .rdata " \
			"-j .data " \
			"-j .bss " \
			"kernel.exe kernel.bin"
	end
end

file "bin/kernel.exe" => OBJ do
	sh "ld -T src/kernel.ld #{OBJ.join(" ")}"
end

CFLAGS =
	"-c " \
	"-std=gnu99 " \
	"-Wall " \
	"-Wextra " \
	"-ffreestanding " \
	"-nostdlib " \
	"-nostdinc " \
	"-fno-exceptions " \
	"-Isrc/inc " \
	"-mno-ms-bitfields " \
	"-lgcc"

rule ".o" => [
	proc { |tn| tn.sub("out", "src").ext(".c") } 
] do |t|
	sh "gcc #{CFLAGS} #{t.source} -o #{t.name}"
end

rule ".o" => [
	proc { |tn| tn.sub("out", "src").ext(".asm") } 
] do |t|
	sh "nasm -f win32 #{t.source} -o #{t.name}"
end
	
task :default => ["bin", "out", "bin/kernel.bin"]

CLEAN.include("bin")
CLEAN.include("out")













